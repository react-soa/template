{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "outDir": "build",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "es2015"],
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  }
}
